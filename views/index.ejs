<%- include('./partials/header.ejs') %>
<%- include('./partials/homenavbar.ejs') %>
<body>

  <div class="container">
    
    <hr>
      <div class="jumbotron">
        <h1 class="display-4">Bem-vindo</h1>
        <p class="lead">Este é um blog para devs que tem duvidas no desenvolvimento nodejs, React e React Native .</p>
        <hr class="my-4">
        <p>Descrição detalhada aqui!</p>
          <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais.</a>
        </p>
      </div>
    <hr>

    <% articles.forEach(article => { %>
      <div class="card">
        <div class="card-header">
          <h2><%= article.title %></h2>
        </div>
        <div class="card-body">
          <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a>
        </div>
      </div>
    <% }) %>
  </div>
</body>
